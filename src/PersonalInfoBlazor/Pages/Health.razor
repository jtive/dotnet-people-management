@page "/health"
@using PersonalInfoBlazor.Services
@using PersonalInfoShared.DTOs
@inject IPersonalInfoApiService ApiService
@inject NavigationManager Navigation

<PageTitle>System Health - Personal Info System</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>System Health</h2>
                <button class="btn btn-primary" @onclick="RefreshHealth">
                    <i class="oi oi-reload"></i> Refresh
                </button>
            </div>

            @if (loading)
            {
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p>Checking system health...</p>
                </div>
            }
            else if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">Health Check Failed!</h4>
                    <p>@errorMessage</p>
                    <hr>
                    <button class="btn btn-outline-danger" @onclick="CheckHealth">Try Again</button>
                </div>
            }
            else
            {
                <div class="row">
                    <!-- System Status -->
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">System Status</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    @if (healthData?.Status == "healthy")
                                    {
                                        <span class="badge bg-success me-3">
                                            <i class="oi oi-check"></i> @healthData.Status.ToUpper()
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger me-3">
                                            <i class="oi oi-x"></i> UNHEALTHY
                                        </span>
                                    }
                                    <span class="text-muted">Last checked: @lastChecked.ToString("yyyy-MM-dd HH:mm:ss")</span>
                                </div>
                                
                                @if (healthData?.Database == "connected")
                                {
                                    <div class="mt-3">
                                        <span class="badge bg-success">
                                            <i class="oi oi-check"></i> Database Connected
                                        </span>
                                    </div>
                                }
                                else
                                {
                                    <div class="mt-3">
                                        <span class="badge bg-danger">
                                            <i class="oi oi-x"></i> Database Disconnected
                                        </span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Statistics -->
                    @if (healthData?.Statistics != null)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">Data Statistics</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="text-center">
                                                <h4 class="text-primary">@(healthData?.Statistics?.Persons ?? 0)</h4>
                                                <small class="text-muted">Persons</small>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-center">
                                                <h4 class="text-info">@(healthData?.Statistics?.Addresses ?? 0)</h4>
                                                <small class="text-muted">Addresses</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-6">
                                            <div class="text-center">
                                                <h4 class="text-warning">@(healthData?.Statistics?.CreditCards ?? 0)</h4>
                                                <small class="text-muted">Credit Cards</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- System Information -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">System Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Timestamp:</strong> @(healthData?.Timestamp.ToString("yyyy-MM-dd HH:mm:ss UTC") ?? "N/A")
                            </div>
                            <div class="col-md-6">
                                <strong>API Status:</strong> 
                                @if (healthData?.Status == "healthy")
                                {
                                    <span class="text-success">Operational</span>
                                }
                                else
                                {
                                    <span class="text-danger">Issues Detected</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private bool loading = true;
    private string? errorMessage;
    private DateTime lastChecked = DateTime.Now;
    private HealthDto? healthData;

    protected override async Task OnInitializedAsync()
    {
        await CheckHealth();
    }

    private async Task CheckHealth()
    {
        try
        {
            loading = true;
            errorMessage = null;
            StateHasChanged();

            var result = await ApiService.GetHealthAsync();
            healthData = result;
            lastChecked = DateTime.Now;
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to check system health: {ex.Message}";
        }
        finally
        {
            loading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshHealth()
    {
        await CheckHealth();
    }
}
